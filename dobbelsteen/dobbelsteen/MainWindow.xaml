<Window x:Class="dobbelsteen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dobbelsteen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Height="222" Margin="58,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="420" FontSize="17" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" IsManipulationEnabled="True"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Height="42" Margin="505,56,0,0" VerticalAlignment="Top" Width="120" FontSize="17" Click="startButton_Click"/>
        <Button x:Name="againButton" Content="Opnieuw" HorizontalAlignment="Left" Height="43" Margin="505,138,0,0" VerticalAlignment="Top" Width="120" FontSize="17" Click="againButton_Click"/>
        <Button x:Name="closeButton" Content="Sluiten" HorizontalAlignment="Left" Height="53" Margin="505,217,0,0" VerticalAlignment="Top" Width="120" FontSize="17" Click="closeButton_Click"/>

    </Grid>
</Window>
